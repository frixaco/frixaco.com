---
import { ViewTransitions } from "astro:transitions"
import VercelSpeedInsights from "@vercel/speed-insights/astro"

// import "@fontsource/manrope"
// import "@fontsource/plus-jakarta-sans"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body class="flex h-screen flex-col items-center bg-black/95 p-4 text-gray-200 md:justify-center">
		<slot />
		<VercelSpeedInsights />

		<script>
			document.addEventListener("astro:page-load", () => {
				document.addEventListener("keydown", (e) => {
					if (e.key === "Backspace") {
						history.back()
					}
				})
			})
		</script>

		<span class="absolute bottom-4 left-4 hidden font-mono text-sm md:block"
			>Press [Backspace] to go <strong>back</strong></span
		>
	</body>
</html>
