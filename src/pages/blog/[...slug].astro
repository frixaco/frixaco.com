---
import { type CollectionEntry, getCollection, render } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import { cn } from "../../lib/utils";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await render(post);
---

<MainLayout {...post.data}>
  <div
    class={cn(
      "prose-headings:text-cyber-fg prose-p:text-cyber-fg prose-img:mx-auto prose-headings:pb-4 prose-headings:font-semibold prose-headings:text-lg prose-a:hover:text-pink-500 prose-a:underline"
    )}
  >
    <Content />
  </div>
</MainLayout>
