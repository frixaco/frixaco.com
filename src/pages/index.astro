---
import GithubLogo from '../components/github-logo.astro'
import LinkedinLogo from '../components/linkedin-logo.astro'
import XLogo from '../components/x-logo.astro'
import Layout from '../layouts/Layout.astro'
import '../globals.css'
---

<script>
  document.addEventListener('keydown', (e) => {
    if (e.altKey || e.ctrlKey || e.metaKey || e.shiftKey) {
      return
    }

    if (e.key === 'p') {
      console.log('Projects')
    }
    if (e.key === 'b') {
      console.log('Blog')
    }
    if (e.key === 'a') {
      console.log('About me')
    }
    if (e.key === 'g') {
      console.log('Github')
    }
    if (e.key === 'l') {
      console.log('Linkedin')
    }
    if (e.key === 'x') {
      console.log('X')
    }
    if (e.key === '?') {
      console.log('?')
    }
  })
</script>

<Layout title='Welcome to Astro.'>
  <div class='fixed inset-0 z-50 flex items-center justify-center bg-black/50'>
    <h1 class='text-4xl font-bold text-white'>WIP</h1>
  </div>

  <main
    class='relative grid size-full max-h-[700px] max-w-6xl gap-1 text-gray-200 md:row-span-10 md:grid-cols-8 md:md:gap-2'
  >
    <script is:inline>
      let shortcutsEnabled = true
      document.addEventListener('keydown', (e) => {
        if (e.key === '?') {
          console.log('?')
          shortcutsEnabled = !shortcutsEnabled
          document.getElementById('shortcuts-toggle-label').textContent =
            shortcutsEnabled ? 'enable' : 'disable'
        }
      })
    </script>
    <label
      for='shortcuts-toggle'
      class='absolute -bottom-6 right-0 font-mono text-sm'
    >
      Press [?] to <strong id='shortcuts-toggle-label'>disable</strong> shortcuts
      <input type='checkbox' name='shortcuts-toggle' class='hidden' />
    </label>

    <div
      tabindex='0'
      class='group flex cursor-pointer flex-col justify-start rounded-xl border border-white/20 bg-primary p-4 hover:border-red-500 focus:outline-none focus:ring-1 focus:ring-red-500 md:col-span-6 md:row-span-6 md:p-6'
      role='button'
      aria-label="Hi, I'm Rustam"
    >
      <p class='text-sm font-thin text-gray-400'>welcome</p>

      <div class='flex flex-1 flex-col justify-between gap-2'>
        <h1 class='text-lg'>
          Hi, I'm <strong
            class='drop-shadow-solid group-hover:text-red-500 group-focus:text-red-500'
            >Rustam Ashurmatov</strong
          > full-stack software developer, with strong interest for pretty much everything
        </h1>

        <div class='flex gap-4'>
          <a
            href='https://github.com/frixaco'
            target='_blank'
            class='relative flex h-10 w-14 items-center justify-center gap-2 rounded-lg border border-red-500 text-2xl shadow-solid shadow-red-500 hover:text-red-500 focus:text-red-500 focus:outline-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none'
          >
            <GithubLogo />

            <span class='absolute -bottom-6 font-mono text-sm text-gray-400'
              >[g]</span
            >
          </a>

          <a
            href='https://www.linkedin.com/in/frixaco/'
            target='_blank'
            class='relative flex h-10 w-14 items-center justify-center gap-2 rounded-lg border border-red-500 text-2xl shadow-solid shadow-red-500 hover:text-red-500 focus:text-red-500 focus:outline-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none'
          >
            <LinkedinLogo />

            <span class='absolute -bottom-6 font-mono text-sm text-gray-400'
              >[l]</span
            >
          </a>

          <a
            href='https://x.com/frixaco'
            target='_blank'
            class='relative flex h-10 w-14 items-center justify-center gap-2 rounded-lg border border-red-500 text-2xl shadow-solid shadow-red-500 hover:text-red-500 focus:text-red-500 focus:outline-none active:translate-x-[2px] active:translate-y-[2px] active:shadow-none'
          >
            <XLogo />

            <span class='absolute -bottom-6 font-mono text-sm text-gray-400'
              >[x]</span
            >
          </a>
        </div>
      </div>
    </div>

    <div
      tabindex='0'
      class='group relative cursor-pointer rounded-xl border border-white/20 bg-primary p-4 hover:border-blue-600 focus:outline-none focus:ring-1 focus:ring-blue-600 md:col-span-2 md:row-span-7'
      role='button'
      aria-label='About me'
    >
      <h1 class='font-bold group-hover:text-blue-400 group-focus:text-blue-400'>
        About me
      </h1>

      <span
        class='absolute bottom-1 right-1 font-mono text-sm font-thin text-gray-400'
        >[a]</span
      >
    </div>

    <div
      tabindex='0'
      class='group cursor-pointer rounded-xl border border-white/20 bg-primary p-4 hover:border-green-600 focus:outline-none focus:ring-1 focus:ring-green-600 md:col-span-2 md:row-span-4'
      role='button'
      aria-label='Socials'
    >
      <h1
        class='font-bold group-hover:text-green-400 group-focus:text-green-400'
      >
        Socials
      </h1>
    </div>

    <div
      tabindex='0'
      class='group relative cursor-pointer rounded-xl border border-white/20 bg-primary p-4 hover:border-purple-600 focus:outline-none focus:ring-1 focus:ring-purple-600 md:col-span-4 md:row-span-2'
      role='button'
      aria-label='Projects'
    >
      <h1
        class='font-bold group-hover:text-purple-400 group-focus:text-purple-400'
      >
        Projects
      </h1>

      <span
        class='absolute bottom-1 right-1 font-mono text-sm font-thin text-gray-400'
        >[p]</span
      >
    </div>

    <div
      tabindex='0'
      class='group relative cursor-pointer rounded-xl border border-white/20 bg-primary p-4 hover:border-pink-600 focus:outline-none focus:ring-1 focus:ring-pink-600 md:col-span-2 md:row-span-3'
      role='button'
      aria-label='Blog'
    >
      <h1 class='font-bold group-hover:text-pink-400 group-focus:text-pink-400'>
        Blog
      </h1>

      <span
        class='absolute bottom-1 right-1 font-mono text-sm font-thin text-gray-400'
        >[b]</span
      >
    </div>

    <div
      tabindex='0'
      class='group cursor-pointer rounded-xl border border-white/20 bg-primary p-4 hover:border-cyan-600 focus:outline-none focus:ring-1 focus:ring-cyan-600 md:col-span-3 md:row-span-2'
      role='button'
      aria-label='NOW'
    >
      <h1 class='font-bold group-hover:text-cyan-400 group-focus:text-cyan-400'>
        NOW
      </h1>
    </div>

    <!-- THIS WILL BE A THEME SWITCHER BUTTON -->
    <div
      tabindex='0'
      class='cursor-pointer rounded-xl border border-white/20 bg-primary p-4 focus:outline-none focus:ring-1 focus:ring-white/40 md:col-span-1 md:row-span-2'
      role='button'
      aria-label='THEME'
    >
      <h1 class='font-bold'>THEME</h1>
    </div>
  </main>
</Layout>
