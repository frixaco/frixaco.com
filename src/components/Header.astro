---
import { SITE_TITLE } from "../consts";
import ModeToggle from "../components/ModeToggle.astro";
---

<header class="bg-cyber-bg sticky top-0 flex flex-col gap-4 pt-4">
  <div
    class="border-b-cyber-bg-alt flex items-start justify-between gap-8 border-b pb-4"
  >
    <nav class="flex h-8 flex-row items-center justify-start gap-8">
      <h1 class="text-cyber-fg hover:text-cyber-red font-bold tracking-wide">
        <a href="/">{SITE_TITLE}</a>
      </h1>

      <span
        class="bg-cyber-bg-alt hidden h-0.5 w-12 rounded-full md:inline-block"
      ></span>

      <div class="text-cyber-grey flex items-center justify-center gap-6">
        <h2
          class="hover:text-cyber-fg cursor-pointer transition-colors duration-200"
        >
          <a href="/">home</a>
        </h2>
        <h2
          class="hover:text-cyber-fg cursor-pointer transition-colors duration-200"
        >
          <a href="/blog">blog</a>
        </h2>
        <h2
          class="hover:text-cyber-fg cursor-pointer transition-colors duration-200"
        >
          <a href="/more">more</a>
        </h2>
      </div>
    </nav>

    <ModeToggle />
  </div>
</header>
