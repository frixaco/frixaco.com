---
import DiscordLogo from "./discord-logo.astro"
import EmaillLogo from "./emaill-logo.astro"
import GithubLogo from "./github-logo.astro"
import LinkedinLogo from "./linkedin-logo.astro"
import TelegramLogo from "./telegram-logo.astro"
import Tooltip from "./tooltip.astro"
import XLogo from "./x-logo.astro"

const { class: className } = Astro.props
---

<div class:list={["flex animate-pop flex-col justify-center gap-2 text-sm font-thin", className]}>
	<div class="flex flex-col items-start gap-2">
		<Tooltip>
			<span class="flex items-center gap-2">
				<EmaillLogo /> email:
			</span>
			<div
				tabindex="0"
				class="flex cursor-pointer items-center gap-2 rounded-sm transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-primary">
				<span class="overflow-scroll scrollbar-hidden hover:text-gray-400 active:text-green-600">
					rr.ashurmatov.21@gmail.com
				</span>
				<span class="hidden font-mono text-gray-400 md:inline-block">[e]</span>
			</div>
		</Tooltip>
	</div>

	<hr class="my-2 h-px w-full border-t border-gray-600" />

	<a
		href="https://github.com/frixaco"
		target="_blank"
		class="flex w-fit cursor-pointer items-center gap-2 rounded-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-primary">
		<GithubLogo />
		<span class="hover:text-gray-400">github</span>
		<span class="hidden font-mono text-gray-400 md:inline-block">[g]</span>
	</a>
	<a
		href="https://www.linkedin.com/in/frixaco/"
		target="_blank"
		class="flex w-fit cursor-pointer items-center gap-2 rounded-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-primary">
		<LinkedinLogo />
		<span class="hover:text-gray-400">linkedin</span>
		<span class="hidden font-mono text-gray-400 md:inline-block">[l]</span>
	</a>
	<a
		href="https://x.com/frixaco"
		target="_blank"
		class="flex w-fit cursor-pointer items-center gap-2 rounded-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-primary">
		<XLogo />
		<span class="hover:text-gray-400">x</span>
		<span class="hidden font-mono text-gray-400 md:inline-block">[x]</span>
	</a>
	<a
		href="https://t.me/frixaco"
		target="_blank"
		class="flex w-fit cursor-pointer items-center gap-2 rounded-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-primary">
		<TelegramLogo />
		<span class="hover:text-gray-400">telegram</span>
		<span class="hidden font-mono text-gray-400 md:inline-block">[t]</span>
	</a>
	<a
		href="https://discordapp.com/users/497957331112427540"
		target="_blank"
		class="flex w-fit cursor-pointer items-center gap-2 rounded-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-primary">
		<DiscordLogo />
		<span class="hover:text-gray-400">discord</span>
		<span class="hidden font-mono text-gray-400 md:inline-block">[d]</span>
	</a>

	<script>
		document.addEventListener("astro:page-load", () => {
			const socialsHandler = (e: KeyboardEvent) => {
				if (document.getElementById("shortcuts-toggle-label")!.textContent === "enable") {
					return
				}

				if (e.altKey || e.ctrlKey || e.metaKey || e.shiftKey) {
					return
				}

				if (e.key === "e") {
					const email = "rr.ashurmatov.21@gmail.com"
					navigator.clipboard.writeText(email)
				}

				if (e.key == "t") {
					window.open("https://t.me/frixaco", "_blank")
				}

				if (e.key == "d") {
					window.open("https://discordapp.com/users/497957331112427540", "_blank")
				}
			}
			document.addEventListener("keydown", socialsHandler)

			document.addEventListener(
				"astro:before-preparation",
				() => {
					document.removeEventListener("keydown", socialsHandler)
				},
				{ once: true },
			)
		})
	</script>
</div>
